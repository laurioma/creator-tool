{
  "name": "creator-tool",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "creator-tool-frontend",
    "functions"
  ],
  "scripts": {
    "start:frontend": "npm run start -w creator-tool-frontend",
    "start:functions": "npm run serve -w functions",
    "start:all": "concurrently \"npm run start:frontend\" \"npm run start:functions\"",
    
    "build:frontend": "npm run build -w creator-tool-frontend",
    "build:functions": "npm run build -w functions",
    "build:all": "npm run build:frontend && npm run build:functions",
    
    "clean:frontend": "npm run clean -w creator-tool-frontend",
    "clean:functions": "npm run clean -w functions",
    "clean:all": "npm run clean:frontend && npm run clean:functions && rm -rf node_modules",
    
    "deploy:frontend": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "firebase deploy",
    
    "test:frontend": "npm run test -w creator-tool-frontend",
    "test:functions": "npm run test -w functions",
    "test:all": "npm run test:frontend && npm run test:functions",
    
    "lint:frontend": "npm run lint -w creator-tool-frontend",
    "lint:functions": "npm run lint -w functions",
    "lint:all": "npm run lint:frontend && npm run lint:functions",
    
    "dev": "npm run start:all",
    "build": "npm run build:all",
    "deploy": "npm run build:all && npm run deploy:all",
    "clean": "npm run clean:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 